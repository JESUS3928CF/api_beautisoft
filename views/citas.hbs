<div class="container">
<table class="table table-hove table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Correo</th>
    </tr>
  </thead>
  <tbody>
    {{#each citas}}
    <tr>
      <th scope="row">{{Id_cita}}</th>
      <td>{{nombre}}</td>
      <td>{{apellido}}</td>
      <td>{{email}}</td>



    </tr>
      {{/each}}
  </tbody>
</table>
</div>
